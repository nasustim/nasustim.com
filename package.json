    "three": "0.154.0",
    "typescript": "5.1.6"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "13.4.12",
    "@storybook/addon-essentials": "7.1.0",
    "@storybook/addon-interactions": "7.1.0",
    "@storybook/addon-links": "7.1.0",
    "@storybook/blocks": "7.1.0",
    "@storybook/nextjs": "7.1.0",
    "@storybook/react": "7.1.0",
    "@storybook/testing-library": "0.2.0",
    "@types/three": "0.154.0",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "eslint": "8.45.0",
    "eslint-config-next": "13.4.12",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-storybook": "0.6.12",
    "husky": "8.0.3",
    "lint-staged": "13.2.3",
    "prettier": "3.0.0",
    "react-dom": "18.2.0",
    "sass": "1.64.0",
    "storybook": "7.1.0",
    "stylelint": "15.10.2",
    "stylelint-config-property-sort-order-smacss": "9.1.0",
    "stylelint-config-standard-scss": "10.0.0",
    "stylelint-scss": "5.0.1",
    "stylelint-selector-bem-pattern": "3.0.0",
    "typescript-plugin-css-modules": "5.0.1"
  },
  "homepage": "https://github.com/nasustim/nasustim.com#readme",
  "main": "src/pages/index.tsx",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nasustim/nasustim.com.git"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:sitemap": "next-sitemap --config ./sitemap.config.js",
    "serve": "next start",
    "test": "echo \"please write test and execute\" | exit 0",
    "storybook:dev": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "lint:app:check": "next lint --no-cache",
    "lint:app:format": "prettier --write --ignore-path .gitignore \"**/*.{ts,tsx,js}\"",
    "lint:app:format:check": "prettier -c \"src/**/*.{ts,tsx}\"",
    "lint:style:check": "stylelint --no-cache \"src/**/*.{scss,css}\" \"!**/node_modules/**\"",
    "lint:style:format": "stylelint --fix \"src/**/*.{scss,css}\" \"!**/node_modules/**\"",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "pnpm run lint:app:format"
    ],
    "*.{css,scss}": [
      "pnpm run lint:style:format"
    ]
  }
}
