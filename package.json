{
  "name": "nasustim.com",
  "private": true,
  "version": "0.0.1",
  "author": "nasustim",
  "bugs": {
    "url": "https://github.com/nasustim/nasustim.com/issues"
  },
  "packageManager": "pnpm@8.15.1",
  "dependencies": {
    "@acab/reset.css": "0.8.0",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "next": "14.1.0",
    "next-sitemap": "4.2.3",
    "postcss-scss": "4.0.9",
    "react": "18.2.0",
    "react-icons": "5.0.1",
    "sharp": "0.33.2",
    "typescript": "5.3.3"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "14.1.0",
    "@next/eslint-plugin-next": "14.1.0",
    "@storybook/addon-essentials": "7.6.10",
    "@storybook/addon-interactions": "7.6.10",
    "@storybook/addon-links": "7.6.10",
    "@storybook/blocks": "7.6.10",
    "@storybook/nextjs": "7.6.10",
    "@storybook/react": "7.6.10",
    "@storybook/testing-library": "0.2.2",
    "@typescript-eslint/eslint-plugin": "6.19.1",
    "@typescript-eslint/parser": "6.19.1",
    "eslint": "8.56.0",
    "eslint-config-next": "14.1.0",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-storybook": "0.6.15",
    "husky": "8.0.3",
    "lint-staged": "15.2.0",
    "prettier": "3.2.4",
    "react-dom": "18.2.0",
    "sass": "1.70.0",
    "storybook": "7.6.10",
    "stylelint": "16.2.0",
    "stylelint-config-property-sort-order-smacss": "10.0.0",
    "stylelint-config-standard-scss": "13.0.0",
    "stylelint-scss": "6.1.0",
    "stylelint-selector-bem-pattern": "3.0.1",
    "typescript-plugin-css-modules": "5.0.2"
  },
  "homepage": "https://github.com/nasustim/nasustim.com#readme",
  "main": "src/pages/index.tsx",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nasustim/nasustim.com.git"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:sitemap": "next-sitemap --config ./sitemap.config.js",
    "serve": "npx serve@latest out",
    "test": "echo \"please write test and execute\" | exit 0",
    "storybook:dev": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "lint:app:check": "next lint --no-cache",
    "lint:app:format": "prettier --write --ignore-path .gitignore \"**/*.{ts,tsx,js}\"",
    "lint:app:format:check": "prettier -c \"src/**/*.{ts,tsx}\"",
    "lint:style:check": "stylelint --no-cache \"src/**/*.{scss,css}\" \"!**/node_modules/**\"",
    "lint:style:format": "stylelint --fix \"src/**/*.{scss,css}\" \"!**/node_modules/**\"",
    "analyze": "ANALYZE=true pnpm run build",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "pnpm run lint:app:format"
    ],
    "*.{css,scss}": [
      "pnpm run lint:style:format"
    ]
  }
}
