{
  "name": "nasustim.com",
  "private": true,
  "version": "0.0.1",
  "author": "nasustim",
  "bugs": {
    "url": "https://github.com/nasustim/nasustim.com/issues"
  },
  "dependencies": {
    "@types/node": "18.0.0",
    "@types/react": "18.0.14",
    "next": "12.1.6",
    "next-sitemap": "3.1.6",
    "normalize.css": "8.0.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "4.7.4"
  },
  "devDependencies": {
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "stylelint": "14.9.1",
    "stylelint-config-property-sort-order-smacss": "9.0.0"
  },
  "homepage": "https://github.com/nasustim/nasustim.com#readme",
  "main": "n/a",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nasustim/nasustim.com.git"
  },
  "scripts": {
    "format": "prettier --write --ignore-path .gitignore \"**/*.{ts,tsx,js}\"",
    "test": "echo \"please write test and execute\" | exit 0",
    "start": "next dev",
    "build": "next build",
    "sitemap": "next-sitemap --config ./sitemap.config.js",
    "serve": "next start",
    "pre-commit": "npm run format",
    "export": "next export",
    "stylelint": "stylelint --fix \"**/*.scss\" \"!**/node_modules/**\"",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run format"
    ],
    "*.{css,scss}": [
      "npm run stylelint"
    ]
  }
}
